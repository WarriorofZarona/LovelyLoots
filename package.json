{
    "name": "lovely-loots",
    "version": "1.0.0",
    "description": "Lovely Loots - An antique e-commerce platform using React, GraphQL, Node.js, and MongoDB.",
    "main": "server/server.js",
    "scripts": {
      "start": "node server/server.js",
      "server": "nodemon server/server.js",
      "client": "vite --config client/vite.config.js",
      "dev": "concurrently \"npm run server\" \"npm run client\"",
      "seed": "node database/seed.js",
      "build": "vite build --config client/vite.config.js"
    },
    "author": "Caroline Bost, Sam Mina, and Kevin Wolf",
    "license": "None",
    "dependencies": {
      "apollo-server-express": "^3.6.0",
      "bcrypt": "^5.0.1",
      "concurrently": "^6.2.1",
      "dotenv": "^10.0.0",
      "express": "^4.17.1",
      "graphql": "^15.5.0",
      "jsonwebtoken": "^8.5.1",
      "mongoose": "^5.13.8",
      "stripe": "^8.174.0"
    },
    "devDependencies": {
      "nodemon": "^2.0.15",
      "vite": "^2.6.4"
    },
    "engines": {
      "node": ">=14.0.0"
    }
  }
  